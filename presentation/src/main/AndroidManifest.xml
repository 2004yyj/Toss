<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ks.hs.dgsw.toss">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.application.DaggerApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Toss"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.view.activity.AccountDetailActivity"
            android:exported="true" />
        <activity
            android:name=".ui.view.activity.SendMoneyActivity"
            android:exported="true" />
        <activity
            android:name=".ui.view.activity.AccountListDetailActivity"
            android:exported="true" />
        <activity
            android:name=".ui.view.activity.ConnectAccountActivity"
            android:exported="true" />
        <activity
            android:name=".ui.view.activity.AddAccountActivity"
            android:exported="true" />
        <activity
            android:name=".ui.view.activity.RemitActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.view.activity.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.activity.AuthActivity"
            android:exported="true" />
        <activity
            android:name=".ui.view.activity.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>