<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Toss" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/medium_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/toss_dark_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/spoqa</item>
    </style>

    <style name="BottomNavigationView.Active"
        parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView"
        parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowSplashscreenContent">@drawable/splash_foreground</item>
    </style>

    <style name="TextViewBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/spoqa_bold</item>
        <item name="android:textColor">@color/toss_dark_color</item>
    </style>

    <style name="TextViewBoldBig" parent="TextViewBold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewBoldMiddle" parent="TextViewBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewRegular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/spoqa_regular</item>
    </style>

    <style name="TextViewRegularBig" parent="TextViewRegular">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewRegularMiddle" parent="TextViewRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/spoqa_regular</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="RegularButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:fontFamily">@font/spoqa_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_main</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>

    <style name="BigButton" parent="RegularButton">
        <item name="android:fontFamily">@font/spoqa_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_big_main</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="GreyRegularButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:fontFamily">@font/spoqa_regular</item>
        <item name="android:textColor">@color/toss_dark_color</item>
        <item name="android:background">@drawable/btn_grey_main</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>
    
    <style name="DivisionLine">
        <item name="android:background">@color/white_grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="DefaultPadding">
        <item name="android:paddingHorizontal">30dp</item>
    </style>
</resources>